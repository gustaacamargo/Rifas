
<%= simple_form_for @raffle do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :kind %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :probable_raffle_date %>
    <%= f.input :start_date_sale %>
    <%= f.input :end_date_sale %>
    <%= f.input :date_raffle %>
    <%= f.input :ticket_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Raffle' : 'Atualizar Raffle', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
